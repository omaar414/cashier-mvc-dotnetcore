@{
    ViewData["Title"] = "Storage";
}

@model Cashier.Models.StorageViewModel


<div class="text-center">

    <div class="text-end"> 
        <a asp-action="Index" class="btn btn-primary btn-lg rounded-pill shadow px-5 py-3 fs-4 mb-2">
            <i class="fas fa-home"></i>
        </a> 
        
       
    </div>
    <br>
    <h1 class="display-4 fw-bold">Cashier App</h1>
    <br>
    <hr>
    
    <div class="row">

        <div class="col-md-8">
            <h2>Storage</h2>
            <br>
            <table class="table table-striped shadow-lg">
                <thead class="table-dark">
                    <tr>
                        <th>Item#</th>
                        <th>Description</th>
                        <th>Size</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Items){
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Description</td>
                            <td>@item.Size</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C2")</td>
                            <td> <a asp-action="DeleteStorageItem" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a> </td>
                        </tr>
                    }
                  
                </tbody>

            </table>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg p-3 mt-2">
                <div class="card-body">
                    <h3 class="card-title">Add Item to Storage</h3>
                    <form asp-action="AddItemToStorage" >
                        <input hidden asp-for="NewItem.Id" class="form-control mb-2" type="text" placeholder="0">

                        <label class="mt-4" >Description</label>
                        <input asp-for="NewItem.Description" class="form-control mb-2 text-center " type="text" placeholder="RVCA/White/Short...">
                        <span asp-validation-for="NewItem.Description" class="text-danger"></span><br>

                        <label class="mt-4" >Price $</label>
                        <input asp-for="NewItem.Price" class="form-control text-center mb-2" step="0.01" type="number" placeholder="0.00">
                        <span asp-validation-for="NewItem.Price" class="text-danger"></span><br>

                        <label class="mt-4" >Size</label>
                        <input asp-for="NewItem.Size" class="form-control mb-2 text-center" type="text" placeholder="small...">
                        <span asp-validation-for="NewItem.Size" class="text-danger"></span><br>

                        <label class="mt-4" >Quantity</label>
                        <input asp-for="NewItem.Quantity" class="form-control text-center mb-2" type="number" placeholder="0">
                        <span asp-validation-for="NewItem.Quantity" class="text-danger"></span><br>

                        <button  type="submit" class="btn btn-primary btn-block">Add</button>
                    </form>
                    
                </div>
            </div>
       
        </div>


    </div>
</div>
